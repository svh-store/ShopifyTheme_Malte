<style>
  .error-code {
    color: rgba(var(--text-color) / 0.4);
    font-size: 9.6rem;
    line-height: 1;
  }

  .error-image {
    width: 1000px;
    height: 1000px;
    max-width: 100%;
    object-fit: contain;
    margin: 40px auto;
    display: block;
  }
</style>

<div class="container text-center">
  <p class="error-code mb-0 font-bold">404</p>

  <img
    src="{{ 'hund-404.png' | asset_url }}"
    alt="Fehlerbild"
    class="error-image"
  >

  <h1 class="h4 text-center">{{ 'templates.404.title' | t }}</h1>
  <p>{{ 'templates.404.subtext' | t }}</p>
  <p class="mt-12">
    <a class="btn btn--primary" href="{{ routes.root_url }}">{{ 'templates.404.link' | t }}</a>
  </p>
</div>

{% schema %}
{
  "name": "404",
  "class": "cc-main-404 section section--template"
}
{% endschema %}
